<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.open.tencenttv">

    <!-- WindowManger 权限(浮动窗口)-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- 测试的主Activity-->
        <activity
            android:name="com.open.tencenttv.MainActivity"
            android:launchMode="singleTask">
        </activity>

        <!-- 测试DEMO Activity -->
        <activity android:name="com.open.tencenttv.DemoGridViewActivity" />
        <activity android:name="com.open.tencenttv.DemoListViewActivity" />
        <activity android:name="com.open.tencenttv.DemoKeyBoardActivity" />
        <activity android:name="com.open.tencenttv.DemoViewPagerActivity">


        </activity>
        <activity android:name="com.open.tencenttv.DemoMenuActivity" />
        <activity android:name="com.open.tencenttv.DemoRecyclerviewActivity" />
        <!--
        腾讯视频主页
        -->
        <activity
            android:name="com.open.tencenttv.TVMainActivity"
            android:launchMode="singleTask">

        </activity>

        <!-- 横向布局-->
        <activity
            android:name="com.open.tencenttv.DemoRecyclerviewActivity2"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

</manifest>